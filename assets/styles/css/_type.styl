$roboto = 'Roboto Condensed', Helvetica Neue, sans-serif

// http://www.modularscale.com/?22&px&1.125&web&text
  
p
  font-size 20px
  line-height 1.5
  margin-bottom 20px
  margin-top 20px

@media $mobile-med
  p
    font-size 24px
    margin-bottom 24px
    margin-top 24px

h1 
  font-size 60px
  line-height 1
  margin-bottom 30px
  margin-top 30px
  
@media $mobile-med
  h1 
    font-size 90px
    line-height 1
    margin-bottom 45px
    margin-top 45px
    
h2 
  font-size 38px
  margin-bottom 19px
  margin-top 19px
  
@media $mobile-med
  h2 
    font-size 44px
    margin-bottom 22px
    margin-top 22px

h3
  font-size 32px
  margin-bottom 16px
  margin-top 16px
  letter-spacing 1px
  
@media $mobile-med
  h3
    font-size 36px
    margin-bottom 18px
    margin-top 18px
h4
  @extends p
  margin-bottom -22px
  