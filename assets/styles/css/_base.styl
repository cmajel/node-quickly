*
  -webkit-font-smoothing antialiased
  box-sizing border-box
  color $dark-gray
  font-family $roboto
  
a 
  text-decoration none

a:hover
  cursor pointer
  
p a 
  color $accent-color

.page-wrap
  clearfix()
  padding 1rem
  padding-bottom 2rem
  padding-top 2rem
  position relative
  width 100%
  
@media $tablet
  .page-wrap
    margin-left auto
    margin-right auto
    
.content-wrap 
  margin-left auto
  margin-right auto
  max-width $max-width 
